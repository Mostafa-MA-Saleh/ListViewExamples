<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iti.mostafa.listviewexamples">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BetterComplexList"/>
        <activity android:name=".ComplexList"/>
        <activity android:name=".SimpleList"/>
        <activity android:name=".SimpleListImage"/>
        <activity android:name=".EvenBetterComplexList"/>
        <activity android:name=".RecyclerViewActivity"/>
    </application>

</manifest>